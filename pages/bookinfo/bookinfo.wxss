  width: 100%;
  max-width: 100%;
}

.content{
  width: 100%;
  height: auto;
  line-height: 44rpx;
  font-size: 35rpx;
  color: #000;
}

.item {
  height: 200rpx;
  margin-top: 20rpx;
  overflow: hidden;
  width: 96%;
  margin-left: 2%;
}

.item .lt {
  float: left;
  width: 200rpx;
}

.item .lt image {
  width: 180rpx;
  height: 160rpx;
  margin-top: 20rpx;
  margin-left: 10rpx;
}

.item .rt {
  float: left;
  width: 480rpx;
  height: 180rpx;
  margin-top: 20rpx;
  position: relative;
}
